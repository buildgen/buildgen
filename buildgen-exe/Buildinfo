S.import "c"
S.import "cpp"

lualibsdir = "lib/"..name.."/"

S.c.generateHeader("@info.h", "@info.cpp", {
	VERSION = version,
	LUALIBS_ROOT = lualibsdir.."lualibs/",
	DEFAULT_GENERATOR = "gen-makefile",
	OS_STRING = S.os,
})
S.cpp.addInclude "@"

S.cpp.addLib{"m", "lua"}
S.cpp.addInclude "<"

S.cpp.compile("@gen", {
	"commandline.hpp",
	"commandline.cpp",
	"files.hpp",
	"files.cpp",
	"globals.hpp",
	"globals.cpp",
	"lua-functions.hpp",
	"lua-functions.cpp",
	"lua-init.hpp",
	"lua-init.cpp",
	"main.cpp",
	"messages.hpp",
	"messages.cpp",

	"@info.h",
	"@info.cpp",

	"<buildgen-xml/common.cpp",
	"<buildgen-xml/common.hpp",
	"<buildgen-xml/load.cpp",
	"<buildgen-xml/load.hpp",
	"<buildgen-xml/save.cpp",
	"<buildgen-xml/save.hpp",
	"<buildgen-xml/target.cpp",
	"<buildgen-xml/target.hpp",
})

S.addToDefault "@gen"

S.install("@gen", "bin/")
S.install("lualibs/", lualibsdir)
